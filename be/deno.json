{
  "name": "blog-api",
  "version": "1.0.0",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi --watch server.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi server.ts",
    "seed": "deno run --allow-read --allow-write --allow-env --allow-ffi scripts/seed.ts",
    "init-db": "deno run --allow-read --allow-write --allow-env --allow-ffi scripts/init-db.ts"
  },
  "imports": {
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  }
}

